<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/friend_mood_username"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="username"
            android:textSize="30dp"/>

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:layout_gravity="right">
        </LinearLayout>

        <ImageView
            android:id="@+id/friend_mood_state"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_gravity="right"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:layout_weight="0.1">

        </ImageView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/friend_mood_photo"
            android:layout_width="500px"
            android:layout_height="198dp"
            android:background="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/friend_mood_explanation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="I am Happy!"
                android:textSize="30sp">

            </TextView>

            <TextView
                android:id="@+id/friend_mood_reason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Here to display reasons"
                android:textSize="20sp">

            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/friend_mood_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="2019-05-09"
                    android:textSize="20sp">

                </TextView>

                <TextView
                    android:id="@+id/friend_mood_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="19:00"
                    android:textSize="20sp">

                </TextView>

            </LinearLayout>

            <TextView
                android:id="@+id/friend_mood_social_situation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Alone"
                android:textSize="20sp">

            </TextView>

            <TextView
                android:id="@+id/friend_mood_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="here shows locations">

            </TextView>


        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFFFFF">

    </LinearLayout>

</LinearLayout>